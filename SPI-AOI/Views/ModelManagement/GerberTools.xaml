<Window x:Class="SPI_AOI.Views.ModelManagement.GerberTools"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPI_AOI.Views.ModelManagement"
        xmlns:cvt="clr-namespace:SPI_AOI.Views"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:emgu="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="GerberTools" 
        Height="900" Width="1600"
        Background="#FFF5F5F5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

            </ResourceDictionary.MergedDictionaries>
            <cvt:BrushColorCvt x:Key="BrushColor"/>
        </ResourceDictionary>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <Menu Height="35">
                    <MenuItem Header="_File" Margin="5">
                        <MenuItem Header="_Open Gerber file"></MenuItem>
                        <MenuItem Header="_Open CAD file"></MenuItem>
                        <MenuItem Header="_"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Tools" Margin="5">
                        <MenuItem Header="_Open Gerber file"></MenuItem>
                        <MenuItem Header="_Open CAD file"></MenuItem>
                        <MenuItem Header="_"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="_View" Margin="5">
                        <MenuItem Header="_Show Line" IsCheckable="True"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Short Keys" Margin="5">
                        <MenuItem Header="_Open Gerber file"></MenuItem>
                        <MenuItem Header="_Open CAD file"></MenuItem>
                        <MenuItem Header="_"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Help" Margin="5">
                        <MenuItem Header="_Open Gerber file"></MenuItem>
                        <MenuItem Header="_Open CAD file"></MenuItem>
                        <MenuItem Header="_"></MenuItem>
                    </MenuItem>
                </Menu>
                <ToolBar Background="Transparent" Margin="0,5,0,0">
                    <Button Width="35" Height="35" Margin="5,0,5,0">
                        <Image Source="../../Resources/Icons/gerber_icon.png"></Image>
                    </Button>
                    <Button Width="35" Height="35" Margin="5,0,5,0">
                        <Image Source="../../Resources/Icons/file_cad-512.png"></Image>
                    </Button>
                    <Button Width="35" Height="35" Margin="5,0,5,0">
                        <Image Source="../../Resources/Icons/gerber_icon.png"></Image>
                    </Button>
                </ToolBar>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="157*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <GroupBox Margin="5" Header="View">
                    <WindowsFormsHost Margin="5" Background="LightGray">
                        <emgu:ImageBox x:Name="imBox"
                                       MouseDown="imBox_MouseDown"
                                       MouseUp="imBox_MouseUp"
                                       MouseMove="imBox_MouseMove"
                                       Paint="imBox_Paint"
                                       ></emgu:ImageBox>
                    </WindowsFormsHost>
                </GroupBox>
            </Grid>
            <Grid Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="251*"/>
                        <RowDefinition Height="538*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <GroupBox Margin="5" Header="Files">
                            <GroupBox.Resources>
                                
                            </GroupBox.Resources>
                            <ListBox x:Name="listImportedFile" Margin="10" Background="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate >
                                        <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                                            <Border BorderThickness="1" MouseDown="Border_MouseDown" BorderBrush="Black" Background="{Binding Path=Color, Converter={StaticResource BrushColor}}" Width="15" Height="15"></Border>
                                            <Label Margin="10,0,0,0" Content="FILe.text" ></Label>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Row="1">
                        <GroupBox Margin="5" Header="Details">

                        </GroupBox>
                    </Grid>
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>
</Window>
